<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.androidtutorialshub.loginregister.profil.ProfilActivity">


<LinearLayout
    android:layout_width="368dp"
    android:layout_height="495dp"
    android:orientation="vertical"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:src="@drawable/profil"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/hint_name"
            android:textSize="20dp"


            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvNameGiris"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="20dp"/>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/hint_email"
            android:textSize="20dp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvEmailGiris"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            />

    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/hint_address"
            android:textSize="20dp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvAddressGiris"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="20dp"/>
    </android.support.v7.widget.LinearLayoutCompat>



    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/hint_mobile"
            android:textSize="20dp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvMobileGiris"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="20dp"/>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Blood Type"
            android:textSize="20dp"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvBtypeGiris"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="20dp"/>
    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnEdit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorTextHint"
        android:text="EDIT"
        android:layout_margin="40dp"
        android:textSize="20dp"
        />

</LinearLayout>



</android.support.constraint.ConstraintLayout>
